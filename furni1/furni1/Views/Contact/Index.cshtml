@model Message
<!-- Start Hero Section -->
<div class="hero" style="padding:1rem">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Contact us</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->
<!-- Start Contact Form -->
<div class="untree_co-section">
    <div class="container">
        <div class="block">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-8 pb-4">
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Email" class="text-black">Your Email</label>
                            <input asp-for="Email" type="email" class="form-control" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject" class="text-black" for="subject">Subject</label>
                            <input asp-for="Subject" type="text" class="form-control" required>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Text" class="text-black" for="message">Message</label>
                            <textarea asp-for="Text" class="form-control" cols="30" rows="5" required></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-center" style="justify-content: space-around;">
                            <button type="submit" class="btn btn-primary hover-outline">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Contact Form -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}