@model ProductVM
<!-- Start Hero Section -->
<div class="hero" style="padding:1rem">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>Shop</h1>
				</div>
			</div> 
			<div class="col-lg-7">
			</div>
		</div>
		<div class="search-container" style="display:flex; justify-content:space-around; margin-top:20px">
			@foreach (var category in Model.Categories)
			{
				<a href="#" class="btn btn-secondary category-button" data-category="@category.Name">
					@category.Name
				</a>
			}
		</div>


	</div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section product-section before-footer-section">
	<div class="container">
		<div class="row" id="products2">

		</div>
		<div class="row" id="products">
			<!-- Start Column -->
			@foreach (Product product in Model.Products)
			{
				<div class="col-12 col-md-4 col-lg-3 mb-5">
					<a class="product-item" asp-controller="Shop" asp-action="Detail" asp-route-id="@product.Id">
						<img src="~/images/@product.Image" class="img-fluid product-thumbnail">
						<h3 class="product-title">@product.Name</h3>
						<strong class="product-price">$@product.Price</strong>
					</a>
				</div>
			}
			<!-- End Column -->
		</div>
		<div class="row" id="loadMoreRow">
			<div class="col-12" style="display:flex; justify-content:center">
				<a id="loadMore" class="btn" style="background-color:#3c5d50">
					Load More
				</a>
				<input type="hidden" value="@Model.ProductCount" />
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script asp-append-version="true" src="~/js/load-more.js"></script>
	<script asp-append-version="true" src="~/js/search.js"></script>
}
